{% extends "base.jinja2" %}
{% block title %}{{ website }}{% endblock %}
{% block content %}
{% for entry in entries %}
<div class="card horizontal hide-on-med-and-down">
  {% if entry.img is defined %}
  <div class="card-image">
    <img class="materialboxed" height="400" src="{{ entry.img }}">
  </div>
  {% endif %}
  <div class="card-stacked">
    <div class="card-content">
      <span class="card-title">
        {{ entry.title }}
        <hr/>
        <div>
        {% for badge in entry.badges %}
          {% if badge == 'github' %}
          <a href={{ entry.url }}><img alt="Github" src="https://img.shields.io/badge/Github-{{ entry.title }}-blue.svg?style=for-the-badge&logo=github"></a>
          {% elif badge == 'github-size' %}
          <a href={{ entry.url }}><img alt="Github size" src="https://img.shields.io/github/repo-size/luxatrumstudio/{{ entry.title }}.svg?color=blue&style=for-the-badge&logo=github"></a>
          {% else %}
          <img src="{{ badge }}">
          {% endif %}
        {% endfor %}
        </div>
      </span>
      {{ entry.preface }}
    </div>
    <div class="card-action">
      <a class="blue-text" href='{{ entry.title.lower() }}.html'>Read more</a>
    </div>
  </div>
</div>
<div class="card hide-on-large-only">
  {% if entry.img is defined %}
  <div class="card-image">
    <img src="{{ entry.img }}">
  </div>
  {% endif %}
  <div class="card-stacked">
    <div class="card-content">
      <span class="card-title">
        {{ entry.title }}
        <hr/>
        <div>
        {% for badge in entry.badges %}
          {% if badge == 'github' %}
          <a href={{ entry.url }}><img alt="Github" src="https://img.shields.io/badge/Github-{{ entry.title }}-blue.svg?style=for-the-badge&logo=github"></a>
          {% elif badge == 'github-size' %}
          <a href={{ entry.url }}><img alt="Github size" src="https://img.shields.io/github/repo-size/luxatrumstudio/{{ entry.title }}.svg?color=blue&style=for-the-badge&logo=github"></a>
          {% else %}
          <img src="{{ badge }}">
          {% endif %}
        {% endfor %}
        </div>
      </span>
      {{ entry.preface }}
    </div>
    <div class="card-action">
      <a class="blue-text" href='{{ entry.title.lower() }}.html'>Read more</a>
    </div>
  </div>
</div>
{% endfor %}
{% endblock %}
