{% extends "base.jinja2" %}
{% block title %}{{ website }}{% endblock %}
{% block content %}
{% for entry in entries %}
<div class="card horizontal hide-on-med-and-down">
  {% if entry.img is defined %}
  <div class="card-image">
    <img class="materialboxed" height="425" src="{{ entry.img }}"/>
  </div>
  {% endif %}
  <div class="card-stacked">
    <div class="card-content">
      <span class="card-title">
        <h3 class="{{ primary }}-text">{{ entry.title }}</h3>
        <hr/>
        {% if entry.tags is defined %}
        <div>
          {% for img, url in entry.tags.items() %}
            {% if url != None %}
              <a href={{ url }}><img alt="{{ img }}" src="{{ img }}"></a>
            {% else %}
              <img alt="{{ img }}" src="{{ img }}">
            {% endif %}
          {% endfor %}
        </div>
        {% endif %}
      </span>
      {{ entry.preface }}
    </div>
    <div class="card-action">
      <a class="{{ secondary }}-text text-accent-3" href='{{ entry.filename }}'>Read more</a>
    </div>
  </div>
</div>
<div class="card hide-on-large-only">
  {% if entry.img is defined %}
  <div class="card-image">
    <img src="{{ entry.img }}"/>
  </div>
  {% endif %}
  <div class="card-stacked">
    <div class="card-content">
      <span class="card-title">
        <h3 class="{{ primary }}-text">{{ entry.title }}</h3>
        <hr/>
        {% if entry.tags is defined %}
        <div>
          {% for img, url in entry.tags.items() %}
            {% if url != None %}
              <a href={{ url }}><img alt="{{ img }}" src="{{ img }}"></a>
            {% else %}
              <img alt="{{ img }}" src="{{ img }}">
            {% endif %}
          {% endfor %}
        </div>
        {% endif %}
      </span>
      {{ entry.preface }}
    </div>
    <div class="card-action">
      <a class="{{ secondary }}-text text-accent-3" href='{{ entry.filename }}'>Read more</a>
    </div>
  </div>
</div>
{% endfor %}
{% endblock %}
